<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th>Module</th>
    <th>Monster 1</th>
    <th>Monster 2</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %>&nbsp</td>
    <td><%= room.id %>&nbsp</td>
    <td><%= room.mod.title %></td>
    <%  if room.monsters[0] != nil %>
      <td><%= room.monsters[0].name %>
    <% else %>
      <td>---
    <% end -%>
    <%  if room.monsters[1] != nil %>
      <td><%= room.monsters[1].name %>
    <% else %>
      <td>---
    <% end -%>

  
    <td><%= link_to 'Show', room,{:exit => room.north_exit} %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

