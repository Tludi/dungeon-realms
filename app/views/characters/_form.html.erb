  </p>
  <p>
    <%= f.label :char_class %><br />
    <%= f.text_field :char_class %>
  </p>
  <p>
    <%= f.label :race %><br />
    <%= f.text_field :race %>
  </p>
  <p>
    <%= f.label :level %><br />
    <%= f.text_field :level %>
  </p>
  <p>
    <%= f.label :health %><br />
    <%= f.text_field :health %>
  </p>
  <p>
    <%= f.label :energy %><br />
    <%= f.text_field :energy %>
  </p>
  <p>
    <%= f.label :experience %><br />
    <%= f.text_field :experience %>
  </p>
  <p>
    <%= f.label :damage %><br />
    <%= f.text_field :damage %>
  </p>
  <p>
    <%= f.label :defense %><br />
    <%= f.text_field :defense %>
  </p>
  <p>
    <%= f.label :gold %><br />
    <%= f.text_field :gold %>
  </p>
  <p>
    <%= f.label :platinum %><br />
    <%= f.text_field :platinum %>
  </p>
  <p><%= f.submit %></p>
